@using RecipeFinder.Core.Models.CategoryModels
@model IEnumerable<CategoryViewModel>

@{
    ViewData["Title"] = "Manage Categories";
}

<div class="row">
    <div class="col-md-12 mb-3">
        <div class="card">
            <div class="card-header">
                <span><i class="bi bi-table me-2"></i></span> Data Table
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table id="example"
                           class="table table-striped data-table"
                           style="width: 100%">
                        <thead>
                            <tr>
                                <th>Category Id</th>
                                <th>Category Name</th>
                                <th>Recipe count in this category</th>
                            </tr>
                        </thead>
                        @if (Model.Count() > 0)
                        {
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.Id</td>
                                        <td>@item.Name</td>
                                        <td>@item.RecipeCount</td>
                                        <td>
                                            <form method="post" asp-area="" asp-controller="Category" asp-action="Delete" asp-route-id="@item.Id" style="margin-bottom:auto;">
                                                <button type="submit" class="btn btn-danger">Delete</button>
                                            </form>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        }
                        else
                        {
                            <tr>
                                <td colspan="5">No data found</td>
                            </tr>
                        }

                        <tfoot>
                            <tr>
                                <th>Category Id</th>
                                <th>Category Name</th>
                                <th>Recipe count in this category</th>
                            </tr>
                        </tfoot>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>