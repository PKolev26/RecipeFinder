@using RecipeFinder.Core.Models.AdminModels
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model AdminPanelServiceModel


<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.1/font/bootstrap-icons.css" />
<link rel="stylesheet" href="~/css/adminpanel.css" />
<title>RecipeFinder - Admin Panel</title>

<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top">
        <div class="container-fluid">
            <button class="navbar-toggler"
                    type="button"
                    data-bs-toggle="offcanvas"
                    data-bs-target="#sidebar"
                    aria-controls="offcanvasExample">
                <span class="navbar-toggler-icon" data-bs-target="#sidebar"></span>
            </button>
            <a asp-area="Administrator" asp-action="AdminPanel" asp-controller="Home" class="navbar-brand me-auto ms-lg-0 ms-3 text-uppercase fw-bold">RecipeFinder Admin Panel</a>
        </div>
    </nav>
    <div class="offcanvas offcanvas-start sidebar-nav bg-dark"
         tabindex="-1"
         id="sidebar">
        <div class="offcanvas-body p-0" style="display:flex;flex-direction:column;justify-content:space-between;">
            <nav class="navbar-dark">
                <ul class="navbar-nav">
                    <li>
                        <a asp-area="Administrator" asp-action="AdminPanel" asp-controller="Home" class="nav-link px-3 sidebar-link">
                            <span class="me-2"><i class="bi bi-speedometer2"></i></span>
                            <span> Panel</span>
                        </a>
                    </li>
                    <li>
                        <a class="nav-link px-3 sidebar-link"
                           data-bs-toggle="collapse"
                           href="#layouts">
                            <span class="me-2"><i class="bi bi-layout-split"></i></span>
                            <span>Management</span>
                            <span class="ms-auto">
                                <span class="right-icon">
                                    <i class="bi bi-chevron-down"></i>
                                </span>
                            </span>
                        </a>
                        <div id="layouts">
                            <ul class="navbar-nav ps-3">
                                <li>
                                    <a asp-area="Administrator" asp-action="ManageUsers" asp-controller="Management" class="nav-link px-3 sidebar-link">
                                        <span class="me-2"><i class="bi bi-people-fill"></i></span>
                                        <span> Manage Users</span>
                                    </a>
                                </li>
                                <li>
                                    <a asp-area="Administrator" asp-action="ManageRecipes" asp-controller="Management" class="nav-link px-3 sidebar-link">
                                        <span class="me-2"><i class="bi bi-egg-fried"></i></span>
                                        <span> Manage Recipes</span>
                                    </a>
                                </li>
                                <li>
                                    <a asp-area="Administrator" asp-action="ManageComments" asp-controller="Management" class="nav-link px-3 sidebar-link">
                                        <span class="me-2"><i class="bi bi-bookmark"></i></span>
                                        <span> Manage Comments</span>
                                    </a>
                                </li>
                                <li>
                                    <a asp-area="Administrator" asp-action="ManageCategories" asp-controller="Management" class="nav-link px-3 sidebar-link">
                                        <span class="me-2"><i class="bi bi-border-all"></i></span>
                                        <span> Manage Categories</span>
                                    </a>
                                </li>
                                <li>
                                    <a asp-area="Administrator" asp-action="ManageDifficulties" asp-controller="Management" class="nav-link px-3 sidebar-link">
                                        <span class="me-2"><i class="bi bi-bar-chart-fill"></i></span>
                                        Manage Difficulties
                                    </a>
                                </li>
                            </ul>
                        </div>
                    </li>
                </ul>
            </nav>
            <a asp-area="" asp-action="Index" asp-controller="Home" name="btn" class="btn btn-danger mx-3 my-3" style="width:85%;">Exit</a>
        </div>
    </div>
    <main class="mt-5 pt-3">
        @* <div class="container-fluid">
        <div class="row">
        <div class="col-md-12">
        <h4>Dashboard</h4>
        </div>
        </div>
        <div class="row">
        <div class="col-md-4 mb-4">
        <div class="card bg-primary text-white h-100">
        <div class="card-body py-5" style="font-size:18px;">Total users count</div>
        <div class="card-footer d-flex">
        <h3>@Model.TotalUsers</h3>
        </div>
        </div>
        </div>
        <div class="col-md-4 mb-4">
        <div class="card bg-warning text-dark h-100">
        <div class="card-body py-5" style="font-size:18px;">Total comments count</div>
        <div class="card-footer d-flex">
        <h3>@Model.TotalComments</h3>
        </div>
        </div>
        </div>
        <div class="col-md-4 mb-4">
        <div class="card bg-success text-white h-100">
        <div class="card-body py-5" style="font-size:18px;">Total recipes count</div>
        <div class="card-footer d-flex">
        <h3>@Model.TotalRecipes</h3>
        </div>
        </div>
        </div>
        </div>
        </div>
        <div class="row">
        <div class="col-md-12 mb-3">
        <div class="card">
        <div class="card-header">
        <span><i class="bi bi-table me-2"></i></span> Data Table
        </div>
        <div class="card-body">
        <div class="table-responsive">
        <table id="example"
        class="table table-striped data-table"
        style="width: 100%">
        <thead>
        <tr>
        <th>Cook name</th>
        <th>Recipe name</th>
        <th>Category</th>
        <th>Difficulty</th>
        <th>Posted on</th>
        <th>Comments</th>
        <th>Finished</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var item in Model.Latest)
        {
        <tr>
        <td>@item.CookFirstName @item.CookLastName</td>
        <td>@item.Recipe</td>
        <td>@item.CategoryName</td>
        <td>@item.DifficultyName</td>
        <td>@item.PostedOn</td>
        <td>@item.CommentsCount</td>
        @if (item.IsFinished == true)
        {
        <td><img src="~/images/checked.png" /></td>
        }
        else
        {
        <td><img src="~/images/x.png" /></td>
        }
        </tr>
        }
        </tbody>
        <tfoot>
        <tr>
        <th>Cook name</th>
        <th>Recipe name</th>
        <th>Category</th>
        <th>Difficulty</th>
        <th>Posted on</th>
        <th>Comments</th>
        <th>Finished</th>
        </tr>
        </tfoot>
        </table>
        </div>
        </div>
        </div>
        </div>
        </div>
        </div> *@
    </main>
</body>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/chart.js@3.0.2/dist/chart.min.js"></script>
<script src="~/lib/jquery/dist/jquery.js"></script>
<script src="./js/adminpage.js></script>