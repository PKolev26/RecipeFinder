@using Microsoft.AspNetCore.Identity;
@using RecipeFinder.Infrastructure.Data.Models;
@inject UserManager<ApplicationUser> _userManager;
@{
    var currentUser = await _userManager.GetUserAsync(User);
} 
@{
    ViewBag.Title = "Online chat";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Cool Chat Page</title>
    <link rel="stylesheet" href="~/css/chat.css">
</head>
<body>
    <div class="container">
        <div class="row">&nbsp;</div>
        <div class="row" style="display:none;">
            <input id="profilepicture" value="@currentUser.ProfilePicture" />
            <div class="col-4"><span />@currentUser.ProfilePicture</span></div>
        </div>
        <div class="row">
            <div class="col-3">Username:</div>
            <input id="userInput" value="@currentUser.FirstName @currentUser.LastName" />
            <div class="col-4"><span />@currentUser.FirstName @currentUser.LastName</span></div>
        </div>
        <div class="row">
            <div class="col-3">Your Message:</div>
            <div class="col-5"><input type="text" id="messageInput" /></div>
        </div>
        <div class="row">&nbsp;</div>
        <div class="row">
            <div class="col-6">
                <input type="button" id="sendButton" value="Send Message" />
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-12">
            <hr />
        </div>
    </div>
    <div class="row" style="width:100%;">
        <div class="col-6" style="max-width:100%">
            <ul id="messagesList"></ul>
        </div>
    </div>

    <script src="~/lib/microsoft/signalr/dist/browser/signalr.js"></script>
    <script src="~/js/chat.js" asp-append-version="true"></script>
</body>
</html>
