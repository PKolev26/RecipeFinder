@model IngredientsAddViewModel
@{
    ViewBag.Title = "Add the recipe ingredients";
}
<h2 class="text-center">@ViewBag.Title</h2>
<hr />

<div class="row">
    <div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
        <form asp-action="Add" method="post">
            <div class="mb-3">
                <label asp-for="@Model.Name" class="form-label-add-edit">Ingredient</label>
                <input asp-for="@Model.Name" class="form-control" aria-required="true" />
                <span asp-validation-for="@Model.Name" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.Quantity" class="form-label-add-edit">Quantity</label>
                <input asp-for="@Model.Quantity" class="form-control" aria-required="true" />
                <span asp-validation-for="@Model.Quantity" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.Unit" class="form-label-add-edit">Quantity unit</label>
                <input asp-for="@Model.Unit" class="form-control" aria-required="true" />
                <span asp-validation-for="@Model.Unit" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <a asp-controller="Recipe" asp-action="All" class="btn btn-warning mb-2 w-100 p-3 fw-bold">Finish</a>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}