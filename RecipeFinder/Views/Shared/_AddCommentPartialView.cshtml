@model CommentAddViewModel
<div class="form-align" style="display:flex;align-items:center;justify-content:center;">
<form asp-controller="Comment" asp-action="AddComment" method="post" asp-route-id="@ViewData["Id"]" style="flex:0 0 80%;" >
    <div class="card-footer py-3 border-0" style="background-color: #f8f9fa;">
        <div class="d-flex flex-start w-100" style="gap:1em;">
            <div style="height: 35px;width: 35px;">
                <img class="rounded-circle shadow-1-strong me-3"
                         src="https://p7.hiclipart.com/preview/355/848/997/computer-icons-user-profile-google-account-photos-icon-account.jpg" alt="avatar"
                     width="50" height="50" />
            </div>
            <div class="form-outline w-100">
                <input asp-for="@Model.Title" class="form-control" aria-required="true" />
                <span asp-validation-for="@Model.Title" class="text-danger"></span>
                <label class="form-label" for="textAreaExample" style="font-size: 0.8em;">Title</label>
            </div>
            <div class="form-outline w-100">
                <textarea asp-for="@Model.Description" class="form-control" aria-required="true" /></textarea>
                <span asp-validation-for="@Model.Description" class="text-danger"></span>
                <label class="form-label" for="textAreaExample" style="font-size: 0.8em;">Message</label>
            </div>
        </div>
        <div class="float-end mt-2 pt-1">
                <button type="submit" class="btn btn-warning">Post comment</button>

        </div>
    </div>
</form>
</div>