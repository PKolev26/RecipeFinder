@model CommentsInfoViewModel
    <div class="container my-5 py-5">
        <div class="row d-flex justify-content-center">
            <div class="col-md-12 col-lg-10 col-xl-8" style="margin-bottom: -100px">
                <div class="card">
                    <div class="card-body">
                        <div class="d-flex flex-start align-items-center">
                            <img class="rounded-circle shadow-1-strong me-3"
                                 src="https://cdn.pixabay.com/photo/2015/10/05/22/37/blank-profile-picture-973460_1280.png" alt="avatar" width="60"
                                 height="60" />
                            <div>
                                <h6 class="fw-bold text-primary mb-1">@Model.AuthorName</h6>
                                <p class="text-muted small mb-0">
                                    Posted on: @Model.PostedOn
                                </p>
                            </div>
                        </div>
                        <p class="mt-3 mb-4 pb-2">
                            @Model.Description
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>