@model CommentsInfoViewModel
<div class="card" style="width: 80%;">
    <div class="card-body">

        <div class="d-flex flex-start align-items-center" style="gap:1em;">
            <div style="height: 35px;width: 35px;">
                <img class="rounded-circle shadow-1-strong me-3"
                     src="@Model.AuthorProfilePicture" alt="avatar"
                     width="50" height="50" />
            </div>
            <div>
                <h6 style="font-size: 0.9em;color: black;font-weight: bold;font-style: italic;">@Model.AuthorFirstName @Model.AuthorLastName</h6>
                <p class="text-muted small mb-0" style="font-size: 0.7em;">
                    Shared publicly - @Model.PostedOn
                </p>
            </div>

        </div>
        <div style="width: 100%;">
            <p class="mt-4 mb-3 pb-2" style="text-align: left;font-size: 1em;">
                @Model.Title
            </p>
        </div>
        <p class="mt-3 mb-4 pb-2" style="font-size: 0.7em;">
            @Model.Description
        </p>
    </div>
</div>